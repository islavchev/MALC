<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/textLapCount"
        android:id="@+id/editLapCount"
        android:textSize="@dimen/textLabelSize"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/athletes_bibs"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:id="@+id/editAthlete01"
        android:gravity="center|bottom"
        android:textSize="@dimen/textLabelSize"
        android:hint="@string/athlete"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAthlete02"
        android:gravity="center|bottom"
        android:hint="@string/athlete"
        android:textSize="@dimen/textLabelSize"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAthlete03"
        android:gravity="center|bottom"
        android:hint="@string/athlete"
        android:textSize="@dimen/textLabelSize"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAthlete04"
        android:gravity="center|bottom"
        android:hint="@string/athlete"
        android:textSize="@dimen/textLabelSize"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:inputType="text"/>

